const express = require('express');
const fs = require('fs');
const path = require('path');
const app = express();
const PORT = process.env.PORT || 3000;

app.set('view engine', 'ejs');
app.use(express.static('public'));

// Helper function to get tutorials from the JSON file
const getTutorials = () => {
    const data = fs.readFileSync(path.join(__dirname, 'tutorials.json'));
    return JSON.parse(data);
};

app.get('/', (req, res) => {
    const tutorialList = getTutorials();
    res.render('index', { tutorials: tutorialList });
});

app.listen(PORT, () => {
    console.log(`Uno.exe Hub running: http://localhost:${PORT}`);
});
